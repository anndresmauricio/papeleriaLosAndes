{
  "version": 2,
  "builds": [
    {
      "src": "firstapp/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/staticfiles/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "firstapp/wsgi.py"
    }
  ],
  "functions": {
    "firstapp/wsgi.py": {
      "maxDuration": 30
    }
  }
}